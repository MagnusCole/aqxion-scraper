# Configuración de Aqxion Scraper v2.0
# Copia este archivo como .env y configura tus valores

# === CONFIGURACIÓN GENERAL ===
APP_NAME=Aqxion Scraper
VERSION=2.0.0
DEBUG=false

# === CONFIGURACIÓN DE SCRAPING ===
# Keywords separados por comas (sin pipeline)
SCRAPING_KEYWORDS=agencia marketing digital,consultoria marketing,marketing digital peru,empresa marketing lima,servicios marketing digital,marketing online peru,agencia publicidad lima,marketing digital empresa,consultor marketing digital,marketing digital negocios,pyme marketing lima,marketing digital pequeno negocio,empresa marketing pequeno,marketing digital startup,consultoria marketing pequeno negocio

# Límites de scraping
SCRAPING_MAX_PER_KEYWORD=10
SCRAPING_MAX_CONCURRENT_REQUESTS=5

# Rate limiting
SCRAPING_DOMAIN_RATE_LIMIT=0.5
SCRAPING_MAX_BACKOFF_DELAY=30

# Filtros de calidad
SCRAPING_MIN_TITLE_LENGTH=15
SCRAPING_MIN_CONTENT_LENGTH=20

# Umbrales de calidad
SCRAPING_MIN_RELEVANCE_SCORE=70
SCRAPING_HIGH_VALUE_THRESHOLD=80

# === CONFIGURACIÓN DE BASE DE DATOS ===
DB_PATH=scraping.db
DB_ENABLE_WAL=true
DB_SYNCHRONOUS_MODE=NORMAL
DB_CACHE_SIZE=-64000
DB_JOURNAL_MODE=WAL
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30.0

# === CONFIGURACIÓN DE ALERTAS ===
# Telegram (opcional)
ALERT_TELEGRAM_TOKEN=your_telegram_bot_token_here
ALERT_TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Configuración de alertas
ALERT_ENABLE_HIGH_VALUE_ALERTS=true
ALERT_ENABLE_SYSTEM_ALERTS=true
ALERT_ENABLE_DAILY_SUMMARY=true
ALERT_ALERT_COOLDOWN_SECONDS=300

# === CONFIGURACIÓN DE CACHE ===
# Redis (opcional - para cache distribuido)
CACHE_REDIS_URL=redis://localhost:6379
CACHE_REDIS_TTL=3600

# Cache local
CACHE_LOCAL_CACHE_SIZE=10000
CACHE_LOCAL_CACHE_TTL=3600

# Tipos de cache a habilitar
CACHE_ENABLE_URL_CACHE=true
CACHE_ENABLE_CONTENT_CACHE=true
CACHE_ENABLE_INTENT_CACHE=true

# === CONFIGURACIÓN DE EXPORTACIÓN ===
EXPORT_OUTPUT_DIRECTORY=exports
EXPORT_ENABLE_CSV_EXPORT=true
EXPORT_ENABLE_JSON_EXPORT=true

# Google Sheets (opcional)
EXPORT_GOOGLE_SHEETS_URL=your_google_sheets_url_here
EXPORT_GOOGLE_CREDENTIALS_PATH=credentials.json

# Programación de exportaciones
EXPORT_DAILY_EXPORT_HOUR=6
EXPORT_ENABLE_AUTO_EXPORT=true

# === CONFIGURACIÓN DE MONITOREO ===
MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=%(asctime)s %(name)s %(levelname)s %(message)s
MONITORING_ENABLE_STRUCTURED_LOGGING=false

# Prometheus (opcional)
MONITORING_ENABLE_PROMETHEUS=false
MONITORING_PROMETHEUS_PORT=8000

# Health checks
MONITORING_ENABLE_HEALTH_CHECKS=true
MONITORING_HEALTH_CHECK_INTERVAL=60

# === CONFIGURACIÓN DE MACHINE LEARNING ===
# Análisis de intenciones con ML (opcional)
ML_ENABLE_ML_INTENT_ANALYSIS=false
ML_MODEL_NAME=facebook/bart-large-mnli
ML_MODEL_CACHE_DIR=models
ML_BATCH_SIZE=16
ML_MAX_SEQUENCE_LENGTH=512
ML_CONFIDENCE_THRESHOLD=0.7

# === CONFIGURACIÓN DE WHATSAPP (FUTURA IMPLEMENTACIÓN) ===
WHATSAPP_API_URL=your_whatsapp_api_url_here
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# === CONFIGURACIÓN DE FUENTES DE DATOS ===
# APIs de búsqueda adicionales (opcional)
SEARCH_GOOGLE_API_KEY=your_google_api_key_here
SEARCH_GOOGLE_CSE_ID=your_google_cse_id_here
SEARCH_BING_API_KEY=your_bing_api_key_here
SEARCH_BRAVE_API_KEY=your_brave_api_key_here

# === CONFIGURACIÓN DE COLAS (OPCIONAL) ===
# Redis para colas de tareas
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CELERY_BROKER_URL=redis://localhost:6379/0
QUEUE_CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Configuración de workers
QUEUE_MAX_WORKERS=4
QUEUE_WORKER_CONCURRENCY=2
QUEUE_TASK_TIME_LIMIT=300
QUEUE_TASK_SOFT_TIME_LIMIT=240
